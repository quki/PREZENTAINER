<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.puregodic.android.prezentainer.SettingBluetoothActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarsettingBtActivity"
            layout="@layout/toolbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/mainblue_light"
            android:gravity="center"
            android:text="이미 연결된 기기 중 PC 만 표시합니다" />

        <ListView
            android:id="@+id/listViewPaired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_bluetooth"
        fab:fab_colorNormal="#FF4081"
        fab:fab_colorPressed="#C2185B"
        fab:fab_colorRipple="#F06292" />
</FrameLayout>