<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/mainblue"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.puregodic.android.prezentainer.FileTransferRequestedActivity">
	<ProgressBar
		android:id="@+id/mProgressBar"
		style="?android:attr/progressBarStyleHorizontal"
		android:background="@drawable/progressbar_filetransfer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true" />
	<TextView
		android:id="@+id/fileTransferStatus"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/mProgressBar"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="59dp"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<Button android:id="@+id/showBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:background="@drawable/button_start"
		android:text="결과보기" />
</RelativeLayout>