<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainblue"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    tools:context="com.puregodic.android.prezentainer.FileTransferRequestedActivity">

        <TextView
            android:id="@+id/ptTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_presentation"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/alarmInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_alarm"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/showBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_start"
            android:text="결과보기"
            android:textSize="15sp"
            android:textColor="@drawable/button_text" />

    <TextView
        android:id="@+id/fileTransferStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>