<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/rootView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:focusableInTouchMode="true"
	android:focusable="true"
	tools:context="com.puregodic.android.prezentainer.SettingActivity">
	<EditText android:id="@+id/ptTitleEditText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:nextFocusDown="@+id/rootView"
		android:hint="프레젠테이션 제목을 기입하세요" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<CheckBox
			android:id="@+id/timerCheckBox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="타이머설정" />
		<RadioGroup
			android:id="@+id/timerRadioGroup"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="invisible">
			<RadioButton
				android:id="@+id/timerRadio5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="5분마다" />
			<RadioButton
				android:id="@+id/timerRadio10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="10분마다" />
			<RadioButton
				android:id="@+id/timerRadio15"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="15분마다" />
			<RadioButton
				android:id="@+id/timerRadioDetail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="개인설정" />
		</RadioGroup>
	</LinearLayout>
	<Button
		android:id="@+id/connectToGearBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/button_connect"
		android:onClick="myOnClick"
		android:text="Gear와 연결하기" />
	<Button android:id="@+id/connectToPcBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/button_connect"
		android:onClick="myOnClick"
		android:text="PC와 연결하기" />
	<Button android:id="@+id/startBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/button_start"
		android:onClick="myOnClick"
		android:text="시작하기" />
	<TextView android:id="@+id/txtsendJson"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>